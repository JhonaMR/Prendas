# ============================================
# SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# ============================================
# SEGURIDAD - JWT
# ============================================
# Genera un secreto seguro con:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=tu_secreto_super_seguro_cambialo_123456
JWT_EXPIRES_IN=24h

# ============================================
# BASE DE DATOS - POSTGRESQL
# ============================================
# Host del servidor PostgreSQL
DB_HOST=localhost

# Puerto de PostgreSQL (por defecto 5432, en desarrollo 5433)
DB_PORT=5433

# Usuario de PostgreSQL
DB_USER=postgres

# Contrase침a del usuario PostgreSQL
