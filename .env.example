# ============================================
# CONNECTION POOL
# ============================================
# N칰mero m칤nimo de conexiones en el pool
DB_POOL_MIN=5

# N칰mero m치ximo de conexiones en el pool
DB_POOL_MAX=20

# Tiempo de inactividad antes de cerrar conexi칩n (ms)
DB_IDLE_TIMEOUT=30000

# Tiempo m치ximo para establecer una conexi칩n (ms)
DB_CONNECTION_TIMEOUT=5000

# SSL para conexi칩n a PostgreSQL (false en desarrollo, true en producci칩n)
